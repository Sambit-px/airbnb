<% layout("layouts/boilerplate.ejs") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3>Edit your Booking</h3>

                <form method="POST" action="/listings/<%= booking.listing._id %>/bookings/<%= booking._id %>?_method=PUT"
                    novalidate class="needs-validation">
                    <div class="mb-3">
                        <label for="startDate" class="form-label">Start Date</label>
                        <input name="startDate" type="date" class="form-control"
                            value="<%= booking.startDate.toISOString().split('T')[0] %>" required>
                        <div class="invalid-feedback">Please provide a valid start date.</div>
                    </div>

                    <div class="mb-3">
                        <label for="endDate" class="form-label">End Date</label>
                        <input name="endDate" type="date" class="form-control"
                            value="<%= booking.endDate.toISOString().split('T')[0] %>" required>
                        <div class="invalid-feedback">Please provide a valid end date.</div>
                    </div>

                    <button class="btn btn-dark edit-btn mt-3">Edit</button>
                </form>
            </div>
        </div>
    </body>